<% content_for(:title, t('.title')) %>
<article id="user-show-<%= @user.id%>" class = "user_show">
  <h2><span><%= t('.title') %></span></h2>
    <%= form_with model: @user do |f| %>
      <section>
          <div class="icon sp-center text-center margin-auto">
            <%= f.label :avatar, id: 'avater_label' do %>
              <span class="filelabel" title="file select">
                <%= image_tag @user.avatar.url, class: 'avatar-icon', id: 'avatar_prev' %>
                <span class="camera"></span>
              </span>
              <%= f.file_field :avatar, accept: 'image/*' %>
              <%= f.hidden_field :avatar_cache %>
            <% end %>
          </div>
          <div class="body sp-center">
            <div class="profile-edit">
              <%= f.label :nickname %>
              <%= f.text_field :nickname %>
            </div>

            <div class="profile-edit">
              <%= f.label :last_name %>
              <%= f.text_field :last_name %>
            </div>

            <div class="profile-edit">
              <%= f.label :first_name %>
              <%= f.text_field :first_name %>
            </div>
            <div class="profile-edit">
              <%= f.label :profile %>
              <%= f.text_area :profile %>
            </div>
          </div>
          <div class="block text-center margin-top-10">
            <%= f.submit t('helpers.submit.update') %>
          </div>
      </section>
    <% end %>
</article>